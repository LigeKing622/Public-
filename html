<script>
    // 新增更新时间弹窗功能
    function showUpdateNotification() {
        const now = new Date();
        const updateTime = now.toLocaleString('zh-CN', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
        });
        
        const updateContent = document.getElementById('updateContent');
        updateContent.textContent = `最近更新: ${updateTime}`;
        
        const notification = document.getElementById('updateNotification');
        notification.style.display = 'block';
        
        // 5秒后自动隐藏
        setTimeout(() => {
            notification.classList.add('hide');
            setTimeout(() => {
                notification.style.display = 'none';
                notification.classList.remove('hide');
            }, 500);
        }, 5000);
    }
    
    document.getElementById('updateClose').addEventListener('click', function() {
        const notification = document.getElementById('updateNotification');
        notification.classList.add('hide');
        setTimeout(() => {
            notification.style.display = 'none';
            notification.classList.remove('hide');
        }, 500);
    });
    
    // 页面加载3秒后显示更新通知
    setTimeout(showUpdateNotification, 3000);

    function calculateDaysTogether() {
        const meetDate = new Date('2025-06-26');
        const today = new Date();
        const timeDiff = today - meetDate;
        const daysTogether = Math.floor(timeDiff / (1000 * 60 * 60 * 24));

        const counterElement = document.getElementById('timeCounter');
        counterElement.textContent = `我们从2025年6月26日相见 目前已经坚持了${daysTogether}天`;
    }

    calculateDaysTogether();
    setInterval(calculateDaysTogether, 86400000);

    function createHearts() {
        const heartsContainer = document.getElementById('hearts');
        const heart = document.createElement('div');
        heart.innerHTML = '❤';
        heart.classList.add('floating-heart');

        const left = Math.random() * 100;
        const delay = Math.random() * 3;
        const size = Math.random() * 10 + 10;

        heart.style.left = `${left}%`;
        heart.style.bottom = '0';
        heart.style.animationDelay = `${delay}s`;
        heart.style.fontSize = `${size}px`;

        heartsContainer.appendChild(heart);

        setTimeout(() => {
            heart.remove();
        }, 4000);
    }

    setInterval(createHearts, 300);

    document.querySelector('.envelope-container').addEventListener('click', function() {
        this.style.animation = 'fadeOut 0.5s ease-in-out forwards';
        document.querySelector('.main-content').style.animation = 'fadeInMain 0.5s ease-in-out forwards';
        document.querySelector('.time-counter').style.animation = 'fadeIn 0.5s ease-in-out forwards';
        document.getElementById('musicPlayer').style.animation = 'fadeIn 0.5s ease-in-out forwards';
    });

    document.addEventListener('DOMContentLoaded', function() {
        const musicPlayer = document.getElementById('musicPlayer');
        const playBtn = document.getElementById('playBtn');
        const progressContainer = document.getElementById('progressContainer');
        const progressBar = document.getElementById('progressBar');
        const musicTitle = document.getElementById('musicTitle');
        const musicArtist = document.getElementById('musicArtist');
        const musicCover = document.getElementById('musicCover');

        const audio = new Audio();
        audio.src = 'http://music.163.com/song/media/outer/url?id=1399112638.mp3';
        audio.loop = true;

        const songInfo = {
            title: "心似烟火",
            artist: "NianNian520",
            cover: "https://tc.z.wiki/autoupload/xm_-rWxylbT20-hodgD_bxLsFZ1w1WKI39LF0VbAshSyl5f0KlZfm6UsKj-HyTuv/20250630/UIOk/940X940/%E5%BE%AE%E4%BF%A1%E5%9B%BE%E7%89%87_2025-06-30_204434_459.jpg"
        };

        musicTitle.textContent = songInfo.title;
        musicArtist.textContent = songInfo.artist;
        musicCover.src = songInfo.cover;

        audio.addEventListener('timeupdate', function() {
            const progress = (audio.currentTime / audio.duration) * 100;
            progressBar.style.width = `${progress}%`;
        });

        progressContainer.addEventListener('click', function(e) {
            const width = this.clientWidth;
            const clickX = e.offsetX;
            const duration = audio.duration;
            audio.currentTime = (clickX / width) * duration;
        });

        playBtn.addEventListener('click', function() {
            if (audio.paused) {
                audio.play();
                playBtn.textContent = '❚❚';
                musicCover.classList.add('rotate');
            } else {
                audio.pause();
                playBtn.textContent = '▶';
                musicCover.classList.remove('rotate');
            }
        });

        document.body.addEventListener('click', function initAudio() {
            audio.play().then(() => {
                audio.pause();
                playBtn.textContent = '▶';
                musicCover.classList.remove('rotate');
            }).catch(e => {});
            document.body.removeEventListener('click', initAudio);
        }, { once: true });

        audio.addEventListener('ended', function() {
            progressBar.style.width = '0%';
        });

        window.addEventListener('resize', function() {
            const heart = document.querySelector('.heart');
            heart.style.display = 'none';
            heart.offsetHeight;
            heart.style.display = 'block';
        });

        document.getElementById('scrollDown').addEventListener('click', function() {
            document.getElementById('memoriesSection').scrollIntoView({
                behavior: 'smooth'
            });
        });

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('show');
                }
            });
        }, { threshold: 0.1 });

        observer.observe(document.getElementById('memoriesSection'));
        observer.observe(document.getElementById('diarySection'));
        observer.observe(document.getElementById('gallerySection'));
        observer.observe(document.getElementById('messageBoardSection'));

        document.getElementById('toDiaryBtn').addEventListener('click', function() {
            document.getElementById('memoriesSection').style.display = 'none';
            document.getElementById('gallerySection').style.display = 'none';
            document.getElementById('messageBoardSection').style.display = 'none';
            document.getElementById('diarySection').style.display = 'block';
            document.getElementById('diarySection').scrollIntoView({
                behavior: 'smooth'
            });
            loadDiaries();
        });

        document.getElementById('toGalleryBtn').addEventListener('click', function() {
            document.getElementById('memoriesSection').style.display = 'none';
            document.getElementById('diarySection').style.display = 'none';
            document.getElementById('messageBoardSection').style.display = 'none';
            document.getElementById('gallerySection').style.display = 'block';
            document.getElementById('gallerySection').scrollIntoView({
                behavior: 'smooth'
            });
            loadGallery();
        });

        document.getElementById('toMessageBoardBtn').addEventListener('click', function() {
            document.getElementById('memoriesSection').style.display = 'none';
            document.getElementById('diarySection').style.display = 'none';
            document.getElementById('gallerySection').style.display = 'none';
            document.getElementById('messageBoardSection').style.display = 'block';
            document.getElementById('messageBoardSection').scrollIntoView({
                behavior: 'smooth'
            });
        });

        document.getElementById('toGalleryFromDiaryBtn').addEventListener('click', function() {
            document.getElementById('memoriesSection').style.display = 'none';
            document.getElementById('diarySection').style.display = 'none';
            document.getElementById('messageBoardSection').style.display = 'none';
            document.getElementById('gallerySection').style.display = 'block';
            document.getElementById('gallerySection').scrollIntoView({
                behavior: 'smooth'
            });
            loadGallery();
        });

        document.getElementById('toMessageBoardFromDiaryBtn').addEventListener('click', function() {
            document.getElementById('memoriesSection').style.display = 'none';
            document.getElementById('diarySection').style.display = 'none';
            document.getElementById('gallerySection').style.display = 'none';
            document.getElementById('messageBoardSection').style.display = 'block';
            document.getElementById('messageBoardSection').scrollIntoView({
                behavior: 'smooth'
            });
        });

        document.getElementById('toMessageBoardFromGalleryBtn').addEventListener('click', function() {
            document.getElementById('memoriesSection').style.display = 'none';
            document.getElementById('diarySection').style.display = 'none';
            document.getElementById('gallerySection').style.display = 'none';
            document.getElementById('messageBoardSection').style.display = 'block';
            document.getElementById('messageBoardSection').scrollIntoView({
                behavior: 'smooth'
            });
        });

        document.getElementById('backFromDiaryBtn').addEventListener('click', function() {
            document.getElementById('diarySection').style.display = 'none';
            document.getElementById('gallerySection').style.display = 'none';
            document.getElementById('messageBoardSection').style.display = 'none';
            document.getElementById('memoriesSection').style.display = 'block';
            document.getElementById('memoriesSection').scrollIntoView({
                behavior: 'smooth'
            });
        });

        document.getElementById('backFromGalleryBtn').addEventListener('click', function() {
            document.getElementById('diarySection').style.display = 'none';
            document.getElementById('gallerySection').style.display = 'none';
            document.getElementById('messageBoardSection').style.display = 'none';
            document.getElementById('memoriesSection').style.display = 'block';
            document.getElementById('memoriesSection').scrollIntoView({
                behavior: 'smooth'
            });
        });

        document.getElementById('backFromMessageBoardBtn').addEventListener('click', function() {
            document.getElementById('diarySection').style.display = 'none';
            document.getElementById('gallerySection').style.display = 'none';
            document.getElementById('messageBoardSection').style.display = 'none';
            document.getElementById('memoriesSection').style.display = 'block';
            document.getElementById('memoriesSection').scrollIntoView({
                behavior: 'smooth'
            });
        });

        document.getElementById('diarySection').style.display = 'none';
        document.getElementById('gallerySection').style.display = 'none';
        document.getElementById('messageBoardSection').style.display = 'none';

        function loadDiaries() {
            const diaryList = document.getElementById('diaryList');
            diaryList.innerHTML = '';

            const diaries = [
                {
                    date: '2025年6月29日',
                    content: '',
                    image: ''
                },
                {
                    date: '2025年6月30日',
                    content: '',
                    image: ''
                },
                {
                    date: '',
                    content: '',
                    image: 'https://via.placeholder.com/500x300/ffe6f2/ff6699?text=Video+Chat'
                },
                {
                    date: '',
                    content: '',
                    image: ''
                },
                {
                    date: '',
                    content: '',
                    image: 'https://via.placeholder.com/500x300/ffe6f2/ff6699?text=Dinner+Date'
                },
                {
                    date: '',
                    content: '',
                    image: ''
                }
            ];

            diaries.forEach(diary => {
                const diaryItem = document.createElement('div');
                diaryItem.className = 'diary-item';

                let diaryHTML = `
                    <div class="diary-date">${diary.date}</div>
                    <div class="diary-content">${diary.content}</div>
                `;

                if (diary.image) {
                    diaryHTML += `<img src="${diary.image}" alt="${diary.date}的日记图片" class="diary-image">`;
                }

                diaryItem.innerHTML = diaryHTML;
                diaryList.appendChild(diaryItem);
            });
        }

        function loadGallery() {
            const galleryGrid = document.getElementById('galleryGrid');
            galleryGrid.innerHTML = '';

            const photos = [
                '',
                '',
                '',
                '',
                '',
                '',
                '',
                '',
                '',
                '',
                '',
                ''
            ];

            photos.forEach(photo => {
                const galleryItem = document.createElement('div');
                galleryItem.className = 'gallery-item';
                
                const img = document.createElement('img');
                img.src = photo;
                img.alt = '我们的照片';
                img.className = 'gallery-image';
                
                galleryItem.appendChild(img);
                galleryGrid.appendChild(galleryItem);
            });
        }
    });
</script>
</body>
</html>
